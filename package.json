{
  "name": "alexa-photos",
  "version": "1.0.6",
  "description": "Sync iCloud shared album to Amazon Photos for Echo Show display",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "web:install": "cd web && npm install",
    "web:dev": "cd web && npm run dev",
    "web:build": "cd web && npm run build",
    "ci": "npm run build && npm run web:install && npm run web:build && npm run format:check && npm run lint && npm run test:run",
    "icloud:test": "tsx src/icloud/test.ts",
    "amazon:setup": "tsx src/amazon/login.ts",
    "notifications:test": "NODE_OPTIONS='--import tsx' node --env-file=.env src/lib/test-notifications.ts",
    "docker:build": "docker build -t alexa-photos:local .",
    "docker:run": "docker run --rm -v ./data:/app/data --env-file .env alexa-photos:local"
  },
  "dependencies": {
    "better-sqlite3": "^12.6.2",
    "dotenv": "^17.3.1",
    "pino": "^10.3.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^25.3.0",
    "@eslint/js": "^9.27.0",
    "eslint": "^9.39.2",
    "typescript-eslint": "^8.55.0",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.1.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.18"
  }
}
