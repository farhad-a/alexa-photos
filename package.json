{
  "name": "alexa-photos",
  "version": "1.0.3",
  "description": "Sync iCloud shared album to Amazon Photos for Echo Show display",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "icloud:test": "tsx src/icloud/test.ts",
    "amazon:setup": "tsx src/amazon/login.ts",
    "notifications:test": "NODE_OPTIONS='--import tsx' node --env-file=.env src/lib/test-notifications.ts",
    "docker:build": "docker build -t alexa-photos:local .",
    "docker:run": "docker run --rm -v ./data:/app/data --env-file .env alexa-photos:local"
  },
  "dependencies": {
    "better-sqlite3": "^11.0.0",
    "dotenv": "^17.2.4",
    "pino": "^8.17.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^8.55.0",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.1.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.18"
  }
}
